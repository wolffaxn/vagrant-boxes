{
  "builders": [
    {
      "type": "virtualbox-iso",
      "vm_name": "rhel-7.2-x86_64",
      "guest_os_type": "RedHat_64",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/rhel7.cfg<enter>"
      ],
      "boot_wait": "10s",
      "disk_size": 81920,
      "hard_drive_interface": "sata",
      "headless": "true",
      "http_directory": "rhel-7.2/http",
      "iso_urls": [
        "iso/rhel-server-7.2-x86_64-dvd.iso",
        "https://developers.redhat.com/download-manager/file/rhel-server-7.2-x86_64-dvd.iso"
      ],
      "iso_checksum_type": "sha256",
      "iso_checksum": "03f3a0291634335f6995534d829bd21ffaa0d000004dfeb1b2fb81052d64a4d5",
      "ssh_password": "root",
      "ssh_username": "root",
      "ssh_port": 22,
      "ssh_wait_timeout": "3600s",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "2048" ],
        [ "modifyvm", "{{.Name}}", "--cpus",   "2"    ],
        [ "modifyvm", "{{.Name}}", "--vram",   "12"   ],
        [ "modifyvm", "{{.Name}}", "--vrde",   "off"  ]
      ],
      "shutdown_command": "/sbin/halt -h -p"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "centos/scripts/vagrant.sh",
        "rhel-7.2/scripts/system.sh",
        "centos/scripts/cleanup.sh"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "compression_level": 9,
      "keep_input_artifact": true,
      "output": "builds/rhel-7.2-x86_64.box"
    }
  ]
}
