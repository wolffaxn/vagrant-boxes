{
  "builders": [
    {
      "type": "virtualbox-iso",
      "vm_name": "centos-6.8-x86_64",
      "guest_os_type": "RedHat_64",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/anaconda-ks.cfg<enter>"
      ],
      "boot_wait": "10s",
      "disk_size": 81920,
      "hard_drive_interface": "sata",
      "headless": "true",
      "http_directory": "http/centos6",
      "iso_urls": [
        "iso/CentOS-6.8-x86_64-bin-DVD1.iso",
        "http://ftp.halifax.rwth-aachen.de/centos/6.8/isos/x86_64/CentOS-6.8-x86_64-bin-DVD1.iso"
      ],
      "iso_checksum_type": "sha256",
      "iso_checksum": "1dda55622614a8b43b448a72f87d6cb7f79de1eff49ee8c5881a7d9db28d4e35",
      "ssh_password": "vagrant",
      "ssh_username": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "3600s",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "2048" ],
        [ "modifyvm", "{{.Name}}", "--cpus",   "2"    ],
        [ "modifyvm", "{{.Name}}", "--vram",   "12"   ],
        [ "modifyvm", "{{.Name}}", "--vrde",   "off"  ]
      ],
      "shutdown_command": "echo 'vagrant' | sudo -S /sbin/halt -h -p"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/centos/vagrant.sh",
        "scripts/centos6/system.sh",
        "scripts/centos/cleanup.sh"
      ],
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'"
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "compression_level": 9,
      "keep_input_artifact": true,
      "output": "builds/centos-6.8-x86_64.box"
    }
  ]
}
