{
  "builders": [
    {
      "type": "virtualbox-iso",
      "vm_name": "centos-7.2-x86_64",
      "guest_os_type": "RedHat_64",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos7.cfg<enter>"
      ],
      "boot_wait": "10s",
      "disk_size": 81920,
      "hard_drive_interface": "sata",
      "headless": "true",
      "http_directory": "centos-7.2/http",
      "iso_urls": [
        "iso/CentOS-7-x86_64-DVD-1511.iso",
        "http://ftp.halifax.rwth-aachen.de/centos/7/isos/x86_64/CentOS-7-x86_64-DVD-1511.iso"
      ],
      "iso_checksum_type": "sha256",
      "iso_checksum": "907e5755f824c5848b9c8efbb484f3cd945e93faa024bad6ba875226f9683b16",
      "ssh_password": "root",
      "ssh_username": "root",
      "ssh_port": 22,
      "ssh_wait_timeout": "3600s",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "2048" ],
        [ "modifyvm", "{{.Name}}", "--cpus",   "2"    ],
        [ "modifyvm", "{{.Name}}", "--vram",   "12"   ],
        [ "modifyvm", "{{.Name}}", "--vrde",   "off"  ]
      ],
      "shutdown_command": "/sbin/halt -h -p"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "centos/scripts/vagrant.sh",
        "centos-7.2/scripts/system.sh",
        "centos/scripts/cleanup.sh"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "compression_level": 9,
      "keep_input_artifact": true,
      "output": "builds/centos-7.2-x86_64.box"
    }
  ]
}
